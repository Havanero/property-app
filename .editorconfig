root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = false

[*.py]
trim_trailing_whitespace = true
max_line_length = 120

[*.{js,json}]
indent_size = 2
trim_trailing_whitespace = true
max_line_length = 120

# YAML Files
[*.{yml,yaml}]
indent_size = 2

[Makefile]
indent_style = tab
